{% for post in posts %}
    <div class="post">

        <h1 class="post-title">{{ post.title }}
            <h3 class="post-info">
                <small>{{ post.user.username }}, {{ post.creationDate|date("j \\d\\e F Y") }}</small>
            </h3>
        </h1>

        <div class="post-content">
            {{ post.content }}
        </div>

    </div>
{% endfor %}

{% if page_count > 1 %}
    <ul class="pager">
        {% if page > 0 %}
            <li><a href="{{ path('blog_blog_homepage', {'page': page - 1}) }}">&larr; Newer</a></li>
        {% endif %}
        {% if page < (page_count - 1) %}
            <li><a href="{{ path('blog_blog_homepage', {'page': page + 1}) }}">Older &rarr;</a></li>
        {% endif %}
    </ul>
{% endif %}